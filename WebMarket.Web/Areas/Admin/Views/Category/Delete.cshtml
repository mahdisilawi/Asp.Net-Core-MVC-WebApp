@model Category
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="DeletePost">
    <input asp-for="Id" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>حذف دسته </h2>
            <hr />
        </div>
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">
            حذف دسته
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:200px">
            بازگشت به لیست
        </a>
    </div>
</form>

