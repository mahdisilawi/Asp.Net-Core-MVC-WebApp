@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2>
                لیست کمپانی ها
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> ایجاد کمپانی جدید
            </a>
        </div>
    </div>
    <br />

    <table class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>
                    نام کمپانی
                </th>

                <th>
                    شماره تماس
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.PhoneNumber
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group" >
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i>ویرایش
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash3"></i>حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>