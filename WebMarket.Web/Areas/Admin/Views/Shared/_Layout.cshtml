<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMarket.Web</title>   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMarket.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!--bootstrap 5 rtl-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.rtl.min.css" integrity="sha384-T5m5WERuXcjgzF8DAb7tRkByEZQGcpraRTinjpywg37AO96WoYN9+hrhDVoM6CaT" crossorigin="anonymous">
    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- toastr styles -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- font iransans-->
    <link rel="stylesheet" href="~/fonts/css/style.css"/>
    <!-- custom styles for admin panel -->
    <link rel="stylesheet" href="~/css/AdminCustomStyles.css" />
    <!--Data Table-->
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

</head>
<body dir="rtl">
    
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="Customer" asp-controller="Home" asp-action="Index">وب مارکت <i class="bi bi-award-fill"></i></a>
    </nav>
    <div id="layoutSidenav">

        <!-- SideBar-->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">محصولات</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                            مدیریت محصولات
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                            مدیریت دسته ها
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="CoverType" asp-action="Index">
                            مدیریت کاور تایپ ها
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Company" asp-action="Index">
                            مدیریت کمپانی ها
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="ShoppingCart" asp-action="Index">
                            مدیریت سبدهای خرید
                        </a>
                    </div>
                </div>
                @*                <div class="sb-sidenav-footer">
                <div class="small">Logged in as:</div>
                Start Bootstrap
                </div>*@
            </nav>
        </div>

        <!-- Content-->
        <div id="layoutSidenav_content">

            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <!-- Footer-->
            <footer class="py-4 bg-dark mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <p class="m-0 text-center text-white">
                            تمامی حقوق مادی و معنوی این سایت متعلق به <a class="text-light" href="http://abolfazlbarzegar.ir" target="_blank">ابوالفضــل برزگـر</a> میباشد.
                        </p>
                        <div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--Data Table-->
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- custom styles for admin panel -->
    <link rel="stylesheet" href="~/css/AdminCustomStyles.css" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
