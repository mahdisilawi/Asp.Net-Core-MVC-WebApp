@using WebMarket.Models.ViewModels
@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}


<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						سبد خرید
					</div>
					<div class="col-6 text-end">
						<a href="" class="btn btn-outline-info btn-sm">ادامه خرید</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ListCart){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="~/images/products/@item.Product.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@item.Product.Title</strong></h5>
						<p><small>@Html.Raw(item.Product.Description)</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							<h6><strong>@item.Product.Price.ToString()
								<span class="text-muted"></span>@item.Count </strong></h6>
						</div>
						<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class="w-75 btn-group" role="group">
								<a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
									<i class="bi bi-plus-square"></i>
								</a> &nbsp;
								<a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
		

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-3">
						<span class="text-success">جمع فاکتور: @Model.CartTotal تومان</span>
					</div>
					<div class="offset-6 col-9">
						<a class="btn btn-primary">ادامه</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>